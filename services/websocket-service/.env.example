# WebSocket Service Environment Configuration

# Basic Configuration
NODE_ENV=development
PORT=8081
WS_PORT=8082
DEBUG=true

# WebSocket Configuration
WS_MAX_CONNECTIONS=10000
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_MESSAGE_SIZE=1048576
WS_CONNECTION_TIMEOUT=60000
WS_COMPRESSION_ENABLED=true
WS_PER_IP_LIMIT=10
WS_RATE_LIMIT_WINDOW=60000
WS_RATE_LIMIT_MAX=100

# Authentication
JWT_SECRET=your-websocket-jwt-secret-key
JWT_ISSUER=ml-trading-platform
JWT_AUDIENCE=websocket-service

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=ws:
REDIS_CLUSTER_MODE=false

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=websocket-service
KAFKA_GROUP_ID=websocket-consumers
KAFKA_SESSION_TIMEOUT=30000
KAFKA_HEARTBEAT_INTERVAL=3000
KAFKA_MAX_BYTES_PER_PARTITION=1048576
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_AUTO_COMMIT_INTERVAL=5000
KAFKA_RETRY_ATTEMPTS=5
KAFKA_RETRY_DELAY=100

# Kafka Topics
KAFKA_TOPIC_MARKET_DATA=market-data-stream
KAFKA_TOPIC_TRADE_EXECUTIONS=trade-executions
KAFKA_TOPIC_PORTFOLIO_UPDATES=portfolio-updates
KAFKA_TOPIC_ML_PREDICTIONS=ml-predictions
KAFKA_TOPIC_RISK_ALERTS=risk-alerts
KAFKA_TOPIC_SYSTEM_EVENTS=system-events
KAFKA_TOPIC_USER_NOTIFICATIONS=user-notifications
KAFKA_TOPIC_ORDER_UPDATES=order-updates
KAFKA_TOPIC_POSITION_UPDATES=position-updates
KAFKA_TOPIC_COMPLIANCE_EVENTS=compliance-events

# WebSocket Channels
WS_CHANNEL_MARKET_DATA=market_data
WS_CHANNEL_PORTFOLIO=portfolio
WS_CHANNEL_TRADING=trading
WS_CHANNEL_ML_ANALYTICS=ml_analytics
WS_CHANNEL_NOTIFICATIONS=notifications
WS_CHANNEL_RISK_MANAGEMENT=risk_management
WS_CHANNEL_SYSTEM_STATUS=system_status

# Subscription Limits
SUBSCRIPTION_FREE_MAX_CHANNELS=3
SUBSCRIPTION_FREE_MAX_SYMBOLS=10
SUBSCRIPTION_FREE_RATE_LIMIT=10
SUBSCRIPTION_BASIC_MAX_CHANNELS=10
SUBSCRIPTION_BASIC_MAX_SYMBOLS=50
SUBSCRIPTION_BASIC_RATE_LIMIT=50
SUBSCRIPTION_PREMIUM_MAX_CHANNELS=25
SUBSCRIPTION_PREMIUM_MAX_SYMBOLS=200
SUBSCRIPTION_PREMIUM_RATE_LIMIT=200
SUBSCRIPTION_ENTERPRISE_MAX_CHANNELS=100
SUBSCRIPTION_ENTERPRISE_MAX_SYMBOLS=1000
SUBSCRIPTION_ENTERPRISE_RATE_LIMIT=1000

# Security Configuration
SECURITY_ENABLE_AUTH=true
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_ENABLE_IP_WHITELIST=false
SECURITY_IP_WHITELIST=
SECURITY_MAX_PAYLOAD_SIZE=1048576
SECURITY_COMPRESSION_THRESHOLD=1024

# Monitoring Configuration
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_INTERVAL=30000
MONITORING_ENABLE_HEALTH_CHECK=true
MONITORING_HEALTH_CHECK_INTERVAL=10000
MONITORING_LOG_LEVEL=info

# Performance Configuration
PERFORMANCE_ENABLE_CLUSTERING=false
PERFORMANCE_WORKER_PROCESSES=0
PERFORMANCE_MEMORY_LIMIT=512
PERFORMANCE_GC_INTERVAL=300000
PERFORMANCE_CONNECTION_POOL_SIZE=100

# External Services
API_GATEWAY_URL=http://localhost:8080
USER_SERVICE_URL=http://localhost:3000
TRADING_SERVICE_URL=http://localhost:3001
MARKET_DATA_SERVICE_URL=http://localhost:3002
ML_ANALYTICS_SERVICE_URL=http://localhost:3003
RISK_SERVICE_URL=http://localhost:3004