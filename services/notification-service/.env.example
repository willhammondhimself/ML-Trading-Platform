# Notification Service Environment Configuration

# Basic Configuration
NODE_ENV=development
PORT=3005
DEBUG=true
SERVICE_NAME=notification-service
VERSION=1.0.0
HEALTH_CHECK_PATH=/health

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/notifications
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_MIGRATE_ON_START=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=2
REDIS_KEY_PREFIX=notif:
REDIS_CLUSTER_MODE=false

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=notification-service
KAFKA_GROUP_ID=notification-consumers
KAFKA_SESSION_TIMEOUT=30000
KAFKA_HEARTBEAT_INTERVAL=3000
KAFKA_MAX_BYTES_PER_PARTITION=1048576
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_AUTO_COMMIT_INTERVAL=5000
KAFKA_RETRY_ATTEMPTS=5
KAFKA_RETRY_DELAY=100

# Kafka Topics
KAFKA_TOPIC_USER_NOTIFICATIONS=user-notifications
KAFKA_TOPIC_TRADE_ALERTS=trade-alerts
KAFKA_TOPIC_RISK_ALERTS=risk-alerts
KAFKA_TOPIC_MARKET_ALERTS=market-alerts
KAFKA_TOPIC_SYSTEM_NOTIFICATIONS=system-notifications
KAFKA_TOPIC_EMAIL_QUEUE=email-queue
KAFKA_TOPIC_SMS_QUEUE=sms-queue
KAFKA_TOPIC_PUSH_QUEUE=push-queue
KAFKA_TOPIC_NOTIFICATION_STATUS=notification-status

# Email Configuration (SMTP)
EMAIL_ENABLED=true
EMAIL_FROM_ADDRESS=noreply@mltrading.com
EMAIL_FROM_NAME=ML Trading Platform
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_MAX_CONNECTIONS=5
EMAIL_RATE_LIMIT=14
EMAIL_TEMPLATE_PATH=./templates
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5000

# SMS Configuration (Twilio)
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
AWS_REGION=us-east-1
SMS_RATE_LIMIT=1
SMS_RETRY_ATTEMPTS=3
SMS_RETRY_DELAY=10000

# Push Notification Configuration
PUSH_ENABLED=false
WEB_PUSH_VAPID_PUBLIC_KEY=your-vapid-public-key
WEB_PUSH_VAPID_PRIVATE_KEY=your-vapid-private-key
WEB_PUSH_VAPID_EMAIL=your-email@example.com
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.mltrading.app
APNS_PRIVATE_KEY=your-apns-private-key
PUSH_RATE_LIMIT=10
PUSH_RETRY_ATTEMPTS=3
PUSH_RETRY_DELAY=5000

# Queue Configuration
QUEUE_CONCURRENCY=10
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50
QUEUE_JOB_TTL=86400000
QUEUE_STALLED_INTERVAL=30000
QUEUE_MAX_STALLED_COUNT=1

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_WINDOW_MS=900000
RATE_LIMITING_MAX_REQUESTS=100
RATE_LIMITING_SKIP_SUCCESSFUL=false

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=ml-trading-platform
JWT_AUDIENCE=notification-service
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
SECURITY_ENABLE_AUTH=true
SECURITY_ENABLE_RATE_LIMITING=true

# Monitoring Configuration
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_INTERVAL=30000
MONITORING_ENABLE_HEALTH_CHECK=true
MONITORING_HEALTH_CHECK_INTERVAL=10000
MONITORING_LOG_LEVEL=info

# Notification Defaults
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=true
NOTIFICATION_DIGEST_ENABLED=true
NOTIFICATION_DIGEST_FREQUENCY=daily
NOTIFICATION_DIGEST_TIME=08:00
NOTIFICATION_TIMEZONE=UTC

# External Services
API_GATEWAY_URL=http://localhost:8080
USER_SERVICE_URL=http://localhost:3000
TRADING_SERVICE_URL=http://localhost:3001
WEBSOCKET_SERVICE_URL=http://localhost:8081

# Template Configuration
EMAIL_TEMPLATE_ENGINE=handlebars
EMAIL_TEMPLATE_CACHE=true
EMAIL_TEMPLATE_CACHE_TTL=3600

# Performance Configuration
PERFORMANCE_ENABLE_CLUSTERING=false
PERFORMANCE_WORKER_PROCESSES=0
PERFORMANCE_MEMORY_LIMIT=512
PERFORMANCE_GC_INTERVAL=300000

# Webhook Configuration
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000
WEBHOOK_SIGNATURE_SECRET=your-webhook-signature-secret

# Delivery Tracking
DELIVERY_TRACKING_ENABLED=true
DELIVERY_TRACKING_RETENTION_DAYS=30
DELIVERY_TRACKING_BATCH_SIZE=100

# Digest Configuration
DIGEST_BATCH_SIZE=1000
DIGEST_PROCESSING_DELAY=60000
DIGEST_TEMPLATE_CACHE=true

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
TRANSLATION_CACHE_TTL=7200

# Error Handling
ERROR_NOTIFICATION_ENABLED=true
ERROR_NOTIFICATION_THRESHOLD=10
ERROR_NOTIFICATION_RECIPIENTS=admin@mltrading.com